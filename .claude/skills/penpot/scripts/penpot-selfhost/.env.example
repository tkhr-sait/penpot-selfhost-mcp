## Penpot Self-Hosting Environment Variables
## Copy this file to .env and customize as needed:
##   cp .env.example .env

# ============================================================
# Core Settings
# ============================================================

# Penpot version (Docker image tag)
PENPOT_VERSION=2.13.3

# Public URL where users access Penpot
PENPOT_PUBLIC_URI=http://localhost:9001

# Secret key for session signing (MUST change in production)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
PENPOT_SECRET_KEY=change-this-insecure-key

# ============================================================
# Port Mapping
# ============================================================

# Penpot frontend port
PENPOT_PORT=9001

# ============================================================
# Database
# ============================================================

# PostgreSQL password
PENPOT_DB_PASSWORD=penpot

# ============================================================
# User Accounts
# ============================================================

# General user (for manual browser access)
PENPOT_DEFAULT_EMAIL=dev@example.com
PENPOT_DEFAULT_PASSWORD=devdev123
PENPOT_DEFAULT_NAME=Developer

# ============================================================
# MCP Server - Claude Code Instance
# ============================================================

# Dedicated user for Claude Code MCP connection
PENPOT_MCP_CLAUDE_EMAIL=mcp-claude@penpot.local
PENPOT_MCP_CLAUDE_PASSWORD=mcpclaude123
PENPOT_MCP_CLAUDE_NAME=Claude Code(MCP)

# Plugin static files port (manifest.json served here)
PENPOT_MCP_CLAUDE_PLUGIN_PORT=4400

# MCP HTTP/SSE endpoint port
PENPOT_MCP_CLAUDE_HTTP_PORT=4401

# WebSocket port (plugin <-> server communication)
PENPOT_MCP_CLAUDE_WS_PORT=4402

# Log level: trace, debug, info, warn, error
PENPOT_MCP_CLAUDE_LOG_LEVEL=info

# ============================================================
# MCP Server - GitHub Copilot Instance
# ============================================================

# Dedicated user for GitHub Copilot MCP connection
PENPOT_MCP_COPILOT_EMAIL=mcp-copilot@penpot.local
PENPOT_MCP_COPILOT_PASSWORD=mcpcopilot123
PENPOT_MCP_COPILOT_NAME=GitHub Copilot(MCP)

# Plugin static files port (manifest.json served here)
PENPOT_MCP_COPILOT_PLUGIN_PORT=4410

# MCP HTTP/SSE endpoint port
PENPOT_MCP_COPILOT_HTTP_PORT=4411

# WebSocket port (plugin <-> server communication)
PENPOT_MCP_COPILOT_WS_PORT=4412

# Log level: trace, debug, info, warn, error
PENPOT_MCP_COPILOT_LOG_LEVEL=info

# ============================================================
# Locale / Timezone
# ============================================================
# Inherited from host environment by default.
# Uncomment to override:
# TZ=Asia/Tokyo
# LANG=ja_JP.UTF-8

# ============================================================
# Storybook
# ============================================================

# Storybook の静的ビルド出力ディレクトリ
# docker-compose.yml からの相対パス or 絶対パス
# Storybook の標準出力先 (storybook-static/) と一致させること
PENPOT_STORYBOOK_DIR=../../../../../storybook-static

# Storybook コンテナのポート
PENPOT_STORYBOOK_PORT=6006

# ============================================================
# Patches (workarounds for upstream issues)
# ============================================================

# IME fix: prevents double text on Enter during IME composition
# (affects Japanese/Chinese/Korean input in comment fields)
# Set to false when upstream Penpot fixes the issue.
PENPOT_PATCH_IME_FIX=true
